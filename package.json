{
  "name": "neuro",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/material": "^5.2.8",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "date-fns": "^2.28.0",
    "fp-ts": "^2.11.7",
    "prosemirror-commands": "^1.2.1",
    "prosemirror-dropcursor": "^1.4.0",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-gapcursor": "^1.2.1",
    "prosemirror-history": "^1.2.0",
    "prosemirror-keymap": "^1.1.5",
    "prosemirror-markdown": "^1.7.0",
    "prosemirror-menu": "^1.1.4",
    "prosemirror-model": "^1.16.1",
    "prosemirror-schema-basic": "^1.1.2",
    "prosemirror-state": "^1.3.4",
    "prosemirror-transform": "^1.3.3",
    "prosemirror-view": "^1.23.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "recoil": "^0.5.2",
    "slate": "^0.72.3",
    "slate-react": "^0.72.4",
    "typescript": "^4.5.4",
    "use-prosemirror": "^1.2.3",
    "web-vitals": "^2.1.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/builder-webpack5": "^6.4.13",
    "@storybook/manager-webpack5": "^6.4.13",
    "@storybook/node-logger": "^6.4.13",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.13",
    "@types/prosemirror-commands": "^1.0.4",
    "@types/prosemirror-dropcursor": "^1.0.3",
    "@types/prosemirror-gapcursor": "^1.0.4",
    "@types/prosemirror-history": "^1.0.3",
    "@types/prosemirror-keymap": "^1.0.4",
    "@types/prosemirror-markdown": "^1.5.5",
    "@types/prosemirror-menu": "^1.0.6",
    "@types/prosemirror-model": "^1.16.0",
    "@types/prosemirror-schema-basic": "^1.0.2",
    "@types/prosemirror-state": "^1.2.8",
    "@types/prosemirror-transform": "^1.1.5",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "mini-css-extract-plugin": "2.4.5",
    "prettier": "^2.5.1",
    "webpack": "^5.66.0"
  },
  "scripts": {
    "build": "npm run :build:app && npm run :build:storybook",
    "build:gh-pages": "PUBLIC_URL=/neuro/ react-scripts build",
    "check:ci": "export CI=true; npm run lint && npm run build && npm run test",
    "lint": "npm run :prettier && npm run :eslint",
    "start:app": "react-scripts start",
    "start:storybook": "start-storybook -p 6006 -s public",
    "test": "react-scripts test --watchAll=false",
    ":build:app": "react-scripts build",
    ":build:storybook": "build-storybook -s public",
    ":eslint": "eslint --fix --ext .ts,.tsx --cache ./src && eslint --ext .ts,.tsx --cache ./src",
    ":prettier": "prettier --ignore-path .gitignore --write --check ./",
    "prepare": "husky install"
  },
  "editorConfig": {
    "root": true,
    "settings": [
      {
        "*": {
          "charset": "utf-8",
          "end_of_line": "lf",
          "indent_size": 2,
          "indent_style": "space",
          "insert_final_newline": "true",
          "trim_trailing_whitespace": "true"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix --cache"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "rules": {
      "no-sequences": 0,
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          },
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 180,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
