{
  "name": "neuro",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "recoil": "^0.5.2",
    "slate": "^0.72.3",
    "slate-react": "^0.72.4",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/builder-webpack5": "^6.4.13",
    "@storybook/manager-webpack5": "^6.4.13",
    "@storybook/node-logger": "^6.4.13",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.13",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "mini-css-extract-plugin": "2.4.5",
    "prettier": "^2.5.1",
    "webpack": "^5.66.0"
  },
  "scripts": {
    "build": "npm run :build:app && npm run :build:storybook",
    "check:format-and-lint": "npm run :format && npm run :lint",
    "check:ci": "npm run check:format-and-lint && npm run build && npm run test",
    "start:app": "react-scripts start",
    "start:storybook": "start-storybook -p 6006 -s public",
    "test": "react-scripts test --watchAll=false",
    ":build:app": "react-scripts build",
    ":build:storybook": "build-storybook -s public",
    ":format": "prettier --ignore-path .gitignore --write ./",
    ":lint": "eslint --ext .ts,.tsx --fix ./",
    "prepare": "husky install"
  },
  "editorConfig": {
    "root": true,
    "settings": [
      {
        "*": {
          "charset": "utf-8",
          "end_of_line": "lf",
          "indent_size": 2,
          "indent_style": "space",
          "insert_final_newline": "true",
          "trim_trailing_whitespace": "true"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check:format-and-lint"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          },
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 180,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
